                    <posx>330</posx>
                    <posy>0</posy>
                    <control type="list" id="5">
                        <description>Picture Info</description>
                        <width>1210</width>
                        <height>730</height>
                        <onup>5</onup>
                        <ondown>5</ondown>
                        <onleft>62</onleft>
                        <onright>62</onright>
                        <orientation>vertical</orientation>
                        <scrolltime tween="quadratic">200</scrolltime>
                        <pagecontrol>62</pagecontrol>
                        <itemlayout width="900" height="62">
                            <control type="label">
                                <width>350</width>
                                <height>62</height>
                                <font>Smaller</font>
                                <label>$INFO[ListItem.Label]</label>
                                <textcolor>$VAR[ThemeColorVar]</textcolor>
                                <textoffsetx>8</textoffsetx>
                            </control>
                            <control type="label">
                                <left>350</left>
                                <width>800</width>
                                <height>62</height>
                                <font>Smaller</font>
                                <label>$INFO[ListItem.Label2]</label>
                                <textcolor>c5e5e5e5</textcolor>
                                <textoffsetx>8</textoffsetx>
                            </control>
                        </itemlayout>
                        <focusedlayout width="900" height="62">
                            <control type="label">
                                <width>350</width>
                                <height>62</height>
                                <font>Smaller</font>
                                <label>$INFO[ListItem.Label]</label>
                                <textcolor>$VAR[ThemeColorVar]</textcolor>
                                <textoffsetx>8</textoffsetx>
                            </control>
                            <control type="label">
                                <left>350</left>
                                <width>800</width>
                                <height>62</height>
                                <font>Smaller</font>
                                <label>$INFO[ListItem.Label2]</label>
                                <textoffsetx>8</textoffsetx>
                            </control>
                        </focusedlayout>
                    </control>
