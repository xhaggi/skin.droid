                        <texturesliderbar>dialogs/scrollbar.png</texturesliderbar>
                        <texturesliderbarfocus>dialogs/scrollbar.png</texturesliderbarfocus>
                        <textureslidernib>-</textureslidernib>
                        <textureslidernibfocus>-</textureslidernibfocus>
                        <onleft>5</onleft>
                        <onright>5</onright>
                        <showonepage>true</showonepage>
                        <orientation>vertical</orientation>
                        <animation effect="fade" start="75" end="0" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(62)">Conditional</animation>
