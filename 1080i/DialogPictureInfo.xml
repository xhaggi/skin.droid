          <texture>$INFO[ListItem.PicturePath]</texture>
      </control>
        <control type="button">
            <include>TouchOverlay</include>
            <onclick>Dialog.Close(pictureinfo)</onclick>
        </control>
        <include>NotificationCenter</include>
