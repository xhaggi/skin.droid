                <aligny>center</aligny>
                <label>$INFO[ListItem.Label]</label>
                <textcolor>$VAR[ThemeColorVar]</textcolor>
                <textoffsetx>8</textoffsetx>
            </control>
            <control type="image">
                <description>Header Line</description>
                <posx>0</posx>
                <posy>72</posy>
                <width>1580</width>
