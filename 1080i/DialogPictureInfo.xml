            </control>
            <control type="image">
                <posx>-21</posx>
                <posy>-21</posy>
                <width>1622</width>
                <height>900</height>
                <include>DialogBack</include>
            </control>
            <control type="label">
                <description>Header</description>
                <posx>20</posx>
                <width>1560</width>
                <height>72</height>
